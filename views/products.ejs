<%- include("./partials/header") %>
<!-- body -->

<body class="main-layout inner_page">
  <!-- loader  -->
  <div class="loader_bg">
    <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
  </div>
  <!-- end loader -->

  <%- include("./partials/menu") %>
  <!-- gallery -->
  <div class="gallery">
    <div class="container_with">
      <div class="row">
        <div class="col-md-12">
          <div class="titlepage text_align_center">
            <h2>Our gallery</h2>
          </div>
        </div>
      </div>
      <div class="tz-gallery">
        <div class="row">
          <% for(product of products){ %>
          <div class="col-lg-4 col-md-6 ma_bottom30">
            <form id="request" class="main_form" action="cart/add" method="POST">
              <div class="lightbox">
                <img src=<%= product.img  %> alt="Bridge">

                <div class="pose">

                  <h3 style="padding-top:10px; padding-bottom:10px;"><%= product.name  %> </h3>
                  <p style="padding-top:10px;">$<%= product.price %> </p>
                </div>
                <input type="hidden" value=<%= product._id %> name="product_id" />
                <div class="col-md-12">
                  <div class="group_form">
                    <button class="send_btn">Add Cart</button>
                  </div>
                </div>
            </form>
          </div>
        </div>
        <% } %>
        <div class="col-md-12">
          <div class="group_form">
            <a href="/cart"><button class="send_btn">GO TO CART</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!-- end gallery -->
  <!-- end footer -->
  <%- include("./partials/footer") %>